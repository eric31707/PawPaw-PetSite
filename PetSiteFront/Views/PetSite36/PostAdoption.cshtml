    <script>
        //圖片預覽用的
        const fileInput = document.getElementById('image1');
        const preview = document.getElementById('preview');

        $('#addPost').click(function () {

            $('#posttype').val("認養");
                $('#adoptTitle').val("公貓求認養，已結紮！賓士公貓求認養，已結紮！");
            $('#animalColor').val("黑白色");
            $('#adoptName').val("ben");
            $('#animalSizeId').val("2");
            $('#animalTypeId').val("2");
            $('#animalGenderId').val("1");
            $('#areaAddress').val("台北市中山區");
            $('#adoptDescription').val("賓士公貓求認養，已結紮！");
            //window.adoptDescription.getData("賓士公貓求認養，已結紮！");
        });

        fileInput.addEventListener('change', function () {
            const file = fileInput.files[0];

            // 使用FileReader讀取文件
            const reader = new FileReader();
            reader.onload = function () {
                preview.src = reader.result;
            };
            reader.readAsDataURL(file);
        });
        ClassicEditor
            .create(document.querySelector('#adoptDescription'), {
            })
            .then(adoptDescription => {
                window.adoptDescription = adoptDescription;
            })
            .catch(error => {
                console.error(error);
            });
        $("#submit").click(function () {
            var data = new FormData();
            //data.append("MemberId", $("#MemberId").val());
            data.append("PostType", $("#posttype").val());
            data.append("AdoptTitle", $("#adoptTitle").val());
            data.append("AnimalColor", $("#animalColor").val());
            data.append("AnimalSizeId", $("#animalSizeId").val());
            data.append("AnimalTypeId", $("#animalTypeId").val());
            data.append("AdoptName", $("#adoptName").val());
            data.append("AnimalGenderId", $("#animalGenderId").val());
            data.append("AreaAddress", $("#areaAddress").val());
            data.append("AdoptDescription", window.adoptDescription.getData());
            //data.append("AdoptDescription", $("#adoptDescription").val());
            data.append("Image1", $("#image1")[0].files[0]);
           // data.append("image1", $("#image1").val());

            //欄位驗證(有無填寫)
            let errorString = "";
            let errorBool = false;
            let errorName = ['刊登類型', '動物類型', '花色', '體型', '刊登標題', '浪浪名稱', '性別', '地址', '浪浪描述', '圖片上傳'];
            let errorindex = 0;
            for (var pair of data.entries()) {
                if (pair[1] === '' || pair[1] === 'undefined') {
                    console.log(pair[0] + ": " + pair[1]);
                    errorString += `${errorName[errorindex]}沒填\n`
                    errorBool = true;
                }
                errorindex++;
            }
            console.log(errorBool)
            if (errorBool == true) {
                alert(errorString);
                return;
            }
           
           $.ajax({
                type: "POST",
                url: "https://localhost:7150/api/Adoptions",
                contentType: false,
                processData: false,
                data: data,
                dataType: 'json',
                xhrFields: {
					withCredentials: true
				},
                success: function (data) {
                    alert(data.name);
                    window.location.href = "/PetSite36/AdoptionPage";
                },
                error: function () {
                    window.location.href = "/PetSite36/AdoptionPage";
                },
            });
        })
    </script>
