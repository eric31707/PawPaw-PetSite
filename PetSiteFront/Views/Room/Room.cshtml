									</ul>
								</div>
								<div class="featured__item__text">
									<input type="hidden" value="@n.RoomId">
									<h6><a href="#">@n.Name</a></h6>
									<h5>@n.Price.ToString("0") <span class="h6">  /每晚</span></h5>
								</div>
							</div>
						</div>
						break;
					case "日式風":
