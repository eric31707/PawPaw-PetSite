@using PetSiteAPI.Models.VM;
@model IEnumerable<RoomVM>

<section class="featured spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title">
					<h2>寵物旅館</h2>
				</div>
				<div class="featured__controls" id="typeFilter">
					<ul>
						<li class="type" data-filter="*" onclick="filterSelection('all')">All</li>
						<li class="type" data-filter=".europe" onclick="filterSelection('europe')">歐洲風</li>
						<li class="type" data-filter=".japanese" onclick="filterSelection('japanese')">日式風</li>
						<li class="type" data-filter=".chinese" onclick="filterSelection('chinese')">中國風</li>
						<li class="type" data-filter=".american" onclick="filterSelection('american')">美式風</li>
						<li class="type" data-filter=".italian" onclick="filterSelection('italian')">義式風</li>
					</ul>
				</div>
			</div>
		</div>
