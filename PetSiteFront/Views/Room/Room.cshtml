									<h6><a href="#">@n.Name</a></h6>
									<h5>@n.Price.ToString("0") <span class="h6">  /每晚</span></h5>
								</div>
							</div>
						</div>
						break;
					case "中國風":
						<div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat chinese filterDiv">
							<div class="featured__item">
								<div class="featured__item__pic set-bg" style="background-image:url('@Url.Content("~/RoomImages/"+imgstr)')">
									<ul class="featured__item__pic__hover">
